{
	"db_name": "ZiteRequests",
	"db_file": "data/ziterequests.db",
	"version": 2,
	"maps": {
		"users/.+/data.json": {
			"to_table": ["message"]
		},
		"users/.+/content.json": {
			"to_json_table": ["cert_user_id"],
			"file_name": "data.json"
		},
		"data.json": {
			"to_table": [
				{
					"node": "categories",
					"table": "categories"
				},
				{
					"node": "zites",
					"table": "zites"
				}
			]
		}
	},
	"tables": {
		"json": {
			"cols": [
				["json_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
				["directory", "TEXT"],
				["file_name", "TEXT"],
				["cert_user_id", "TEXT"]
			],
			"indexes": [ "CREATE UNIQUE INDEX path ON json(directory, file_name)" ],
			"schema_changed": 10
		},
		"message": {
			"cols": [
				["message_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
				["body", "TEXT"],
				["request_type", "CHAR"],
				["removal_reason", "TEXT"],
				["date_added", "INTEGER"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX message_key ON message(json_id, message_id)"],
			"schema_changed": 12
		},
		"zites": {
			"cols": [
				["address", "TEXT PRIMARY KEY"],
				["title", "TEXT"],
				["description", "TEXT"],
				["category", "TEXT"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX zite_key ON zites(json_id, address)"],
			"schema_changed": 15
		},
		"categories": {
			"cols": [
				["category_id", "INTEGER PRIMARY KEY AUTOINCREMENT"],
				["name", "TEXT UNIQUE"],
				["json_id", "INTEGER REFERENCES json (json_id)"]
			],
			"indexes": ["CREATE UNIQUE INDEX category_key ON categories(json_id, category_id)"],
			"schema_changed": 10
		}
	}
}